{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2020"
  },
  "include": ["src", "**/*.json"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}

